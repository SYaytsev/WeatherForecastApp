@*@model List<string>*@

@model IEnumerable<WeatherForecastApplication.Models.City>
@{
    ViewBag.Title = "Main";
}

<div class="jumbotron">
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm("Forecast", "Home"))
            {
                @Html.Label("Select city from list:")
                @Html.DropDownList("city",
                       new SelectList(Model.Select(i => i.Name).Distinct().ToList()),
                       new { @class = "form-control" })
                @*@Html.DropDownList("city", new SelectList(Model), new { @class = "form-control" })*@
                <input type="submit" name="button" value="Show forecast" class="btn btn-primary" />
            }
            @Html.ActionLink("Update list of cities", "Index", "City", null, new { @class = "btn btn-warning" })

            <h4>or</h4>

            @using (Html.BeginForm("Forecast", "Home"))
            {
                @Html.Label("Enter city name:")
                @Html.TextBox("city", "", new { @class = "form-control" })
                <input type="submit" name="button" value="Show forecast" class="btn btn-primary" />
            }     
        </div>
    </div>
</div>